<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.acorn2.FinalProject.qnaboard.dao.QnaBoardDao">

	<sql id="searchCondition">
      <choose>
         <when test="title != null and content != null">
            WHERE title LIKE '%'||#{title}||'%' 
            OR content LIKE '%'||#{content}||'%'
         </when>
         <when test="title != null">
            WHERE title LIKE '%'||#{title}||'%'
         </when>
         <when test="board_question_writer != null">
            WHERE board_question_writer LIKE '%'||#{board_question_writer}||'%'
         </when>
      </choose>
	</sql>
	<select id="selectQnaBoardCount" parameterType="com.acorn2.FinalProject.qnaboard.dto.req.QnaBoardReadReqDto" resultType="java.lang.Integer">
		SELECT NVL(MAX(ROWNUM), 0)
		FROM qna_board_question
		<include refid="searchCondition"/>
	</select>
	
	<select id="selectQnaBoardList" parameterType="com.acorn2.FinalProject.qnaboard.dto.req.QnaBoardReadReqDto" resultType="com.acorn2.FinalProject.qnaboard.dto.res.QnaBoardReadResDto">
		SELECT *
      	FROM
         (SELECT result1.*, ROWNUM AS rnum
          FROM
            (SELECT board_question_num,board_question_writer,title,content,viewCount,user_regdate
             FROM qna_board_question
             <include refid="searchCondition"/>
             ORDER BY board_question_num DESC) result1)
        WHERE rnum BETWEEN #{rowStart} AND #{rowEnd}
		
	</select>
		
	<insert id="insertQnaBoard" parameterType="com.acorn2.FinalProject.qnaboard.dto.QnaBoardDto">
		INSERT INTO qna_board_question
		(board_question_num,board_question_writer,title,content,viewCount,user_regdate, 
		ANSWERED_YN, UPDATE_DATE, DELETE_YN_CODE)
		VALUES(QNA_BOARD_QUESTION_seq.NEXTVAL, #{board_question_writer}, #{title}, #{content}, 0, SYSDATE, 'no', sysdate, 'no')
	</insert>
