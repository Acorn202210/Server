<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.acorn2.FinalProject.faq.dao.FaqDao">
	
	<insert id="insert" parameterType="faqDto">
		INSERT INTO faq
		(num,question,content)
		VALUES(faq_seq.NEXTVAL, #{question}, #{content})
	</insert>
	
	<delete id="delete" parameterType="int">
		DELETE FROM faq
		WHERE num=#{num}
	</delete>
	
	<update id="update" parameterType="faqDto">
		UPDATE faq
		SET question=#{question}, content=#{content}
		WHERE num=#{num}
	</update>
	
	<select id="selectFaqList" parameterType="com.acorn2.FinalProject.faq.dto.req.FaqReadReqDto" resultType="com.acorn2.FinalProject.faq.dto.res.FaqReadResDto">
		SELECT *
		FROM
			(SELECT result1.*, ROWNUM AS rnum
			FROM
				(SELECT num,question,content
				FROM FAQ
				ORDER BY num DESC) result1)
		 WHERE rnum BETWEEN #{rowStart} AND #{rowEnd}
				
	</select>
	
	<select id="getData" parameterType="int" resultType="faqDto">
     	SELECT result1.*
		FROM
			(SELECT num,question,content
			 FROM faq) result1
		WHERE num=#{num}
   </select>
   
   	<select id="selectFaqCount" parameterType="com.acorn2.FinalProject.faq.dto.req.FaqReadReqDto" resultType="java.lang.Integer">
   		SELECT NVL(MAX(ROWNUM), 0)
		FROM FAQ
	</select>
</mapper>